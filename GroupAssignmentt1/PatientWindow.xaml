<Window x:Class="GroupAssignmentt1.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupAssignmentt1"
        mc:Ignorable="d"
        Title="PatientWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:PatientWindowVM/>
    </Window.DataContext>
    
    <Grid>
        <Image Source="/Images/26807.jpg" Stretch="Fill" />
        <StackPanel>
            <TextBlock Margin="20"  Text="Name "/>
            <TextBlock Margin="20" Text="{Binding Name}"  Style="{StaticResource normalText}" />
            <TextBlock Margin="20" Text="Age " />
            <TextBlock Margin="20" Text="{Binding Age}"  Style="{StaticResource normalText}"/>
            <TextBlock Margin="20" Text="Services" />
            <TextBlock Margin="20" Text="Amount "/>
            <TextBlock Margin="20" Text="{Binding Amount}"  Style="{StaticResource normalText}"/>

        </StackPanel>
      
        
    </Grid>
</Window>
