<Window x:Class="GroupAssignmentt1.Service_Register_Winodw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupAssignmentt1"
        mc:Ignorable="d"
        Title="Service_Register_Winodw" Height="450" Width="800">
    <Window.DataContext>
        <local:Service_Registration_WindowVm/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush  ImageSource="/Images/26807.jpg" />


        </Grid.Background>

        <StackPanel>
            <TextBlock Text="SERVICE REGISTRATION" FontSize="40" Style="{StaticResource titleText}"/>
            <TextBlock Margin="-0 60 0 0 " Text="Enter the Patient's Name and the relavant cost" />
            <TextBlock Margin="10 30 0 0 " Text="Patient's Name"  />
            <TextBox Style="{StaticResource textBox}" Text="{Binding Servicename}" />
            <TextBlock Text="Cost"   />
            <TextBox Style="{StaticResource textBox}" Text="{Binding Cost}"/>
            <Button Content="Save"  Margin="10 40 0 0" Style="{StaticResource mainButton}" Background="LightBlue"  Command="{Binding saveCommand}" />

        </StackPanel>
     
       
    </Grid>
</Window>
